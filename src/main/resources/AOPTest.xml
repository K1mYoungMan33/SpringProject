<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="calcTarget" class="com.yi.spring.calc.Calculator" />
    <bean id="logAdvice" class="com.yi.spring.calc.LoggingAdvice" />
    <bean id="logAdvice2" class="com.yi.spring.calc.LoggingAdvice2" />

    <bean id="proxyCal" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="calcTarget" />
        <property name="interceptorNames">
            <list>
                <value>logAdvice</value>
                <value>logAdvice2</value>
            </list>
        </property>
    </bean>
</beans>