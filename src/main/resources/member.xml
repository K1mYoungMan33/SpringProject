<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class="com.yi.spring.member.MemberServiceImpl" lazy-init="true">
        <property name="memberDAO" ref="memberDAO" />
        <property name="name" value="홍길동"/>
        <property name="age" value="123"/>
    </bean>
    <bean id="memberDAO" class="com.yi.spring.member.MemberDAOImpl" />
    <bean id="memberService2" class="com.yi.spring.member.MemberServiceImpl">
        <constructor-arg value="손흥민" />
        <constructor-arg value="23" />
    </bean>

</beans>
